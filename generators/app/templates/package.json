{
  "name": "<%= appname %>",
  "version": "0.0.0",
  "description": "<%= appname %>",
  "scripts": {
    "clean": "rimraf dist",
    "start": "webpack-dev-server --open",
    "watch": "webpack --watch",
    "format": "prettier --write \"src/**/*.{js,ts,scss,html}\"",
    "prebuild": "npm run format",
    "build": "npm run clean && webpack --config ./webpack.config.js",
    "test": "jest",
    "test-watch": "jest --watchAll"
  },
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^23.3.5",
    "copy-webpack-plugin": "^4.5.4",
    "css-loader": "^1.0.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.6.0",
    "mini-css-extract-plugin": "^0.4.4",
    "node-sass": "^4.9.4",
    "prettier": "^1.15.1",
    "sass-loader": "^7.1.0",
    "ts-jest": "^23.10.4",
    "ts-loader": "^5.2.2",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-loader": "^3.5.4",
    "typescript": "^3.1.3",
    "webpack": "^4.21.0",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.9"
  },
  "dependencies": {},
  "engines": {
    "node": ">=6.0.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|js)$",
    "moduleFileExtensions": ["ts", "js"],
    "testEnvironment": "jsdom"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
